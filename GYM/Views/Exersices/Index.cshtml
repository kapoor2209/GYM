@model IEnumerable<GYM.Models.Exersice>

@{
    ViewData["Title"] = "Index";
}

<h1>Exersices</h1>

<p>
    <a asp-action="Create">Add Exersice</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExersiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Advantage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disadvantage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExersiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Advantage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disadvantage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExcerciseID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ExcerciseID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ExcerciseID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
