@model IEnumerable<GYM.Models.ExpTrainer>

@{
    ViewData["Title"] = "Index";
}

<h1>Experienced Trainer</h1>

<p>
    <a asp-action="Create">Add interested person</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trainer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exersice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Trainer.Trainername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exersice.ExersiceName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
